  <div class="tabs">
       <table bgcolor="#DCDCDC" width="100%">
        <tr bgcolor="#DCDCDC" >

            <th width="1%">Nº_Ins- <br/>crição</th>
            <th width="10%">Data/Hora <br/>Inscrição</th>
            <th width="20%">Nome</th>
            <th width="12%">Classe</th>
            <th width="15%">Região</th>
            <th width="15%">Unidade</th>
            <th width="10%">Status</th>
        </tr>
           <%$t=0%>
           <% @criancas.each do |crianca| %>
           <%$t = $t+1%>
        <tr bgcolor="#F5F5F5" style="font-size:12px">

                <td align="center"><%=h crianca.id%></td>
                                   
                <%  if crianca.created_at.nil?%>
                    <td align="center"></td>
                <%else%>
                     <td align="center"><%=h crianca.created_at.strftime("%d/%m/%Y %M:%M")%><br/></td>
                <%end%>
                <td align="left"><%=h crianca.nome%></td>
                <td align="center"><%if !crianca.grupo_id.nil?%><%=h crianca.grupo.nome%><%end%></td>
                <td align="center"><%if !crianca.regiao_id.nil?%><%=h crianca.regiao.nome%><%end%></td>
                <td align="center"> <%=h crianca.unidade_ref%></td>
                <td align="left"><%=h crianca.status%></td>
                <td align="left" ><%= link_to image_tag("/stylesheets/images/status.png"), {:action => "alteracao_status", :id =>crianca.id}, :target => '_blank', :title => "Status" %></td>

              </tr>

            <% end %>
     </table>

     <table bgcolor="#DCDCDC" width="100%">
      <tr >
        <td colspan="3" align="right"><b>TOTAL INSCRIÇÕES: </b>
            <font color ="red "size="2"><b><%=$t %></b></font>
          </td>
      </tr>
    </table>

    <tr>

    </tr>
  </div>

